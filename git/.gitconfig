[push]
	default = simple

[core]
	editor = vim
	autocrlf = input
	
[core]
	editor = nvim
	autocrlf = input
	excludesfile = ~/.gitignore_global
	pager = diff-so-fancy | less --tabs=4 -RFX

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/

[alias]
	co = checkout
	ci = commit -m
	st = status
	br = branch
	hist = log --pretty=format:\"%h %af | %s%d [%an]\" --graph --date=short
	type = cat-file -t
	dump = cat-file -p
	d = diff
	pl = pull
	pu = push
	a = add
	ap = add -p
	ac = !git add . && git commit -m
	undo = reset --soft HEAD~1
	sub = submodule update --init --recursive
	cp = cherry-pick
	patch = !git --no-pager diff --no-colorcl = clone
	rmbranches = !git branch -vv | grep ': gone' | awk '{print $1}' | xargs git branch -d -D

[commit]
	gpgsign = true

[gpg]
	program = /usr/bin/gpg

[credential]
	helper = /usr/lib/git-core/git-credential-libsecret

[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[mergetool]
  keepBackup = false

[merge]
  tool = vimdiff

[diff "diff"]
  command = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[diff]
  tool = vimdiff

[pull]
	rebase = true

[diff-so-fancy]
	markEmptyLines = false

[include]
	path = /home/max/.gitconfigs/.workconfig
[init]
	defaultBranch = main
